<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmedalaa.recipes">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.ahmedalaa.recipes.RecipesApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ahmedalaa.recipes.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.skydoves.pokedex.androidx-startup"
            android:exported="false"
           >

            <meta-data
                android:name="com.ahmedalaa.recipes.initializer.TimberInitializer"
                android:value="androidx.startup" />
        </provider>

    </application>

</manifest>